@model Repo_PMS.Models.VMfeedbackList


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProvoideFeedback</title>
</head>
<body>

<h4>Reportees</h4>
<hr />
<div class="container justify-content-center col-6">
    <div class="col-md-4">


            @if (Model.lstreporties != null)
            {
                <form asp-action="RecordFeedback">
                    <table>
                        <tr>

                            <th> Emp ID</th>
                            <th> Emp Name </th>

                        </tr>
                        @foreach (var item in Model.lstreporties)
                        {
                            <tr>
                                <td>@Html.RadioButtonFor((M=>M.EmpID),item.EmpID)</td>
                                <td>@item.EmpName</td>
                            </tr>


                        }


                    </table>

                    <input type="hidden" asp-for="mgrEmpID" value="@Model.mgrEmpID" />
                    <input type="hidden" asp-for="reviewname" value="@Model.reviewname" />


                    <input type="Submit" name="Give FeedBack" value="Provoide Feedback"/>
                </form>
            }
          






            











        </div>
</div>
 
<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
