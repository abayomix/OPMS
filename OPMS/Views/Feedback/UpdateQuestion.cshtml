@model Repo_PMS.Models.VMFeedback



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateQuestion</title>
</head>
<body>

<h4> Update Feedback</h4>
<hr />
<div class="container justify-content-center col-6">
    <div class="col-md-4">
        <form asp-action="UpdateQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                    <label asp-for="Question.Id" class="control-label"></label>
                    <input asp-for="Question.Id" class="form-control" readonly/>
                    <span asp-validation-for="Question.Id" class="text-danger"></span>
                </div>

            
            <div class="form-group">
                    <label asp-for="Question.Question" class="control-label"></label>
                    <input asp-for="Question.Question" class="form-control" />
                    <span asp-validation-for="Question.Question" class="text-danger"></span>
                </div>

            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</body>
</html>
