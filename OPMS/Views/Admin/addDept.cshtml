@model Repo_PMS.Models.Department

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>addDept</title>
</head>
<body>

<h4>Department</h4>
<hr />
<div class="container justify-content-center">
    <div class="col-md-4">
        <form asp-action="addDept">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="DeptName" class="control-label"></label>
                <input asp-for="DeptName" class="form-control" />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeptDescription" class="control-label"></label>
                <input asp-for="DeptDescription" class="form-control" />
                <span asp-validation-for="DeptDescription" class="text-danger"></span>
            </div>
         
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


</body>
</html>
