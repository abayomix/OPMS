@model Repo_PMS.Models.Degination


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddDegination</title>
</head>
<body>

<h4>Degination</h4>
<hr />
<div class="container justify-content-center">
    <div class="col-md-4">
        <form asp-action="AddDegination">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="DeginationName" class="control-label"></label>
                <input asp-for="DeginationName" class="form-control" />
                <span asp-validation-for="DeginationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="D_Description" class="control-label"></label>
                <input asp-for="D_Description" class="form-control" />
                <span asp-validation-for="D_Description" class="text-danger"></span>
            </div>
          
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


</body>
</html>

