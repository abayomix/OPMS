@model Repo_PMS.Models.VMAssesmentQuestion


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddQuestion</title>
</head>
<body>

<h4>VMAssesmentQuestion</h4>
<hr />
<div class="container justify-content-center col-6">
    <div class="col-md-4">
        <form asp-action="AddQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">

                <label asp-for="Question.DeptID"></label>
                <select asp-for="Question.DeptID" asp-items= "@(new SelectList(Model.DepartmentList,"Id","DeptName"))"></select>
                <span asp-validation-for="Question.DeptID" class="text-danger"></span>
            </div>

             <div class="form-group">

                <label asp-for="Question.DegID"></label>
                <select asp-for="Question.DegID" asp-items= "@(new SelectList(Model.DeginationsList,"Id","DeginationName"))"></select>
                <span asp-validation-for="Question.DegID" class="text-danger"></span>
            </div>


           
            <div class="form-group">

                <label asp-for="Question.Question_Text"></label>
                <input type="text" asp-for="Question.Question_Text" class="form-control"/>
                <span asp-validation-for="Question.Question_Text" class="text-danger"></span>
            </div>
            
              <div class="form-group">

                <label asp-for="Question.option_1"></label>
                <input type="text" asp-for="Question.option_1" class="form-control"/>
                <span asp-validation-for="Question.option_1" class="text-danger"></span>
            </div>

              <div class="form-group">

                <label asp-for="Question.option_2"></label>
                <input type="text" asp-for="Question.option_2" class="form-control"/>
                <span asp-validation-for="Question.option_2" class="text-danger"></span>
            </div>

              <div class="form-group">

                <label asp-for="Question.option_3"></label>
                <input type="text" asp-for="Question.option_3" class="form-control"/>
                <span asp-validation-for="Question.option_3" class="text-danger"></span>
            </div>

              <div class="form-group">

                <label asp-for="Question.option_4"></label>
                <input type="text" asp-for="Question.option_4" class="form-control"/>
                <span asp-validation-for="Question.option_4" class="text-danger"></span>
            </div>

             
               

            <div class="form-group">

                 @{

                    List<SelectListItem> lstcorrect = new List<SelectListItem> {
                        new SelectListItem { Text = "1", Value = "1" },
                        new SelectListItem { Text = "2", Value = "2" },
                        new SelectListItem { Text = "3", Value = "3" },
                        new SelectListItem { Text = "4", Value = "4" }
                  
                    };

                       
                    }

                <label asp-for="Question.Correct"></label>
                
                <select asp-for="Question.Correct" asp-items= "lstcorrect" class="control-select">
                </select>               
                <span asp-validation-for="Question.Correct" class="text-danger"></span>
            </div>
            
            
            
            
            
            <div class="form-group">
                 <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</body>
</html>
